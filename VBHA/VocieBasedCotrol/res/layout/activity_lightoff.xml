<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/off"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LightControl" >

   <Button
       android:id="@+id/button2"
       android:layout_width="50dp"
       android:layout_height="68dp"
       android:layout_alignLeft="@+id/seek"
       android:layout_alignParentBottom="true"
       android:layout_marginBottom="23dp"
       android:background="@drawable/selectorone" />

   <SeekBar
       android:id="@+id/seek"
       android:layout_width="300dp"
       android:layout_height="wrap_content"
       android:layout_above="@+id/button2"
       android:layout_marginBottom="42dp"
       android:layout_toLeftOf="@+id/btn_speak"
       android:max="100"
       android:progress="50"
       android:progressDrawable="@drawable/seek_bar"
       android:thumb="@drawable/thumb" />

   <Button
       android:id="@+id/btn_speak"
       android:layout_width="50dp"
       android:layout_height="65dp"
       android:layout_alignParentRight="true"
       android:layout_below="@+id/seek"
       android:layout_marginRight="20dp"
       android:background="@drawable/selectormic" />

   <Button
       android:id="@+id/button4"
       android:layout_width="30dp"
       android:layout_height="50dp"
       android:layout_alignBottom="@+id/seek"
       android:layout_alignRight="@+id/btn_speak"
       android:background="@drawable/selectorlightoff" />

</RelativeLayout>